{% extends "JspAdminBundle::layout.html.twig" %}

{% block corps %}
<h1>EVENEMENTS</h1>
<div class="btn-group">
	<a href="{{ path('jsp_admin_evenements_nouveau') }}" class="btn btn-primary">Nouvel Evenement</a>
	<a href="{{ path('jsp_admin_evenements_purger') }}" class="btn btn-danger">Purger</a>
</div>
<table class="table table-striped">
	<thead>
	<tr>
		<th>Date</th>
		<th>Horaire</th>
		<th>Titre</th>
		<th>Action</th>
	</tr>
	</thead>
	<tbody>
		{% for evenement in evenements %}
		<tr>
			<td>{{ evenement.date|date('d/m/Y') }}</td>
			<td>{{ evenement.date|date('H\\hi') }} -> {{ evenement.dateFin|date('H\\hi') }}</td>
			<td>{{ evenement.titre }}</td>
			<td><a href="{{ path('jsp_admin_evenements_modifier', { 'id': evenement.id }) }}" title="Editer"><span class="glyphicon glyphicon-pencil"></span></a> <a href="{{ path('jsp_admin_evenements_supprimer', { 'id': evenement.id }) }}" title="Supprimer"><span class="glyphicon glyphicon-remove"></span></a></td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}
