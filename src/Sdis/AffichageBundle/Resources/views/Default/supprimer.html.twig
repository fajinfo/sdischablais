{% extends '::layoutAdmin.html.twig' %}

{% block corps %}

<h1>COMMUNICATIONS</h1>
<div class="panel panel-danger">
<div class="panel-heading">
<h3 class="panel-title">Voulez vous vraiment supprimer la communication suivante ?</h3>
</div>
<div class="panel-body">
<p>{{ communication.titre|upper }} </p>
<p>{{ communication.contenu|raw }}</p>
<div class="btn-group">
<a href="{{ path('sdis_admin_communications_liste') }}" class="btn btn-success">Retour</a>
<a href="{{ path('sdis_admin_communications_supprimerOk', { 'id': communication.id }) }}" class="btn btn-danger">Supprimer</a>
</div>
</div>
</div>
{% endblock %}