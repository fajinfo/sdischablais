{% extends '::layoutAdmin.html.twig' %}


{% block corps %}
<h1>MODIFICATIONS</h1>
<div class="btn-group">
<a href="{{ path('sdis_admin_nouveautes_ajouter') }}" class="btn btn-primary">Nouvelle Modification</a>
</div>
<table class="table table-striped">
    <thead>
	<tr>
		<th>Date</th>
		<th>Nouveaut√©</th>
		<th>Action</th>
	</tr>
    </thead>
    <tbody>	
	{% for nouveaute in nouveautes %}
	<tr>
		<td>{{ nouveaute.date|date('d/m/Y') }}</td>
		<td>{{ nouveaute.description }}</td>
		<td><a href="{{ path('sdis_admin_nouveautes_modifier', { 'id': nouveaute.id }) }}" title="Editer"><span class="glyphicon glyphicon-pencil"></span></a> <a href="{{ path('sdis_admin_nouveautes_supprimer', { 'id': nouveaute.id }) }}" title="Supprimer"><span class="glyphicon glyphicon-remove"></span></a></td>
	</tr>
	{% endfor %}
    </tbody>
</table>
{% endblock %}